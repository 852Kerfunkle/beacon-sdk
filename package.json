{
  "name": "@airgap/beacon-sdk",
  "version": "0.0.2-beta.4",
  "description": "The beacon-sdk is setup in a way to allow for p2p communication between wallets and dapps",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "airgap",
    "beacon",
    "crypto",
    "blockchain",
    "bitcoin",
    "tezos",
    "aeternity",
    "ethereum"
  ],
  "license": "MIT",
  "homepage": "https://www.airgap.it",
  "repository": {
    "type": "git",
    "url": "https://github.com/airgap-it/beacon-sdk"
  },
  "scripts": {
    "build": "tsc && node scripts/ts-backwards-compatibility.js",
    "prettier": "npx prettier --write 'src/**/*'",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "lint-ci": "eslint 'src/**/*.ts' -f json -o lintReport.json || true",
    "test": "nyc mocha --require ts-node/register --require source-map-support/register --full-trace --timeout 40000 ./test/**/**.spec.ts",
    "test-ci": "nyc --reporter=lcov npm test",
    "sonar-scanner": "sonar-scanner",
    "prepare": "npm run build"
  },
  "author": "Papers GmbH <contact@papers.ch> (https://papers.ch)",
  "dependencies": {
    "bs58check": "2.1.2",
    "libsodium-wrappers": "0.7.6",
    "matrix-js-sdk": "2.4.3",
    "qrcode-generator": "1.4.4"
  },
  "devDependencies": {
    "@types/chai-as-promised": "7.1.2",
    "@types/chrome": "0.0.91",
    "@types/libsodium-wrappers": "0.7.7",
    "@types/mocha": "5.2.7",
    "@types/node": "13.1.6",
    "@typescript-eslint/eslint-plugin": "2.16.0",
    "@typescript-eslint/eslint-plugin-tslint": "2.16.0",
    "@typescript-eslint/parser": "2.16.0",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-plugin-import": "2.20.0",
    "eslint-plugin-no-null": "1.0.2",
    "eslint-plugin-prefer-arrow": "1.1.7",
    "mocha": "6.2.2",
    "nyc": "14.1.1",
    "prettier": "1.19.1",
    "sonar-scanner": "3.1.0",
    "ts-node": "8.6.2",
    "tslint": "^5.20.1",
    "typescript": "3.8.0-beta"
  },
  "files": [
    "/dist"
  ],
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "test/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
